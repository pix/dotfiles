{
    "height": 16, // Waybar height (to be removed for auto height)

    "modules-left": [
        "hyprland/workspaces",
        "hyprland/window"
    ],

    "modules-center": [],

    "modules-right": [
        "group/music",
        "custom/hyprpip",
        "custom/weather",
        "idle_inhibitor",
        "group/hardware",
        "network#bw",
        "group/netinfo",
        "pulseaudio",
