    "group/music": {
        "orientation": "inherit",
        "drawer": {
            "transition-duration": 500,
            "children-class": "not-power",
            "transition-left-to-right": false,
        },
        "modules": [
            "mpris#icon",
            "mpris",
        ]
    },
    "group/hardware": {
        "orientation": "inherit",
        "drawer": {
            "transition-duration": 500,
            "children-class": "not-power",
            "transition-left-to-right": false,
        },
        "modules": [
            "cpu",
            "custom/docker",
            "custom/ufw",
            "memory",
            "disk"
        ]
    },
    "group/netinfo": {
        "orientation": "inherit",
        "drawer": {
            "transition-duration": 500,
            "children-class": "not-power",
            "transition-left-to-right": false,
        },
        "modules": [
            "custom/network",
            "network",
        ]
    },

    "custom/docker": {
        // "exec": "count=$(docker ps -q | wc -l); [[ $count -gt 0 ]] && echo $count",
        "exec": "waybar-docker",
        "exec-if": "waybar-docker --has-containers",
        "return-type": "json",
        "format": "Ôéï {}",
        "interval": 60,
        "on-click": "hyprctl dispatch togglespecialworkspace lazydocker"
    },
    "custom/ufw": {
        // "exec": "count=$(docker ps -q | wc -l); [[ $count -gt 0 ]] && echo $count",
        "exec": "~/.bin/waybar-ufw",
        "exec-if": "pgrep NetworkManager",
        "return-type": "json",
        "format": "Ôè≠ {}",
        "interval": 60,
    },
    "custom/notification": {
        "tooltip": false,
        "format": "{icon}",
        "format-icons": {
            "notification": "ÔÇ¢<span foreground='red'><sup>ÔëÑ</sup></span>",
            "none": "ÔÇ¢",
            "dnd-notification": "Ôá∑<span foreground='red'><sup>ÔëÑ</sup></span>",
            "dnd-none": "Ôá∑",
            "inhibited-notification": "ÔÇ¢<span foreground='red'><sup>ÔëÑ</sup></span>",
            "inhibited-none": "ÔÇ¢",
            "dnd-inhibited-notification": "Ôá∑<span foreground='red'><sup>ÔëÑ</sup></span>",
            "dnd-inhibited-none": "Ôá∑"
        },
        "return-type": "json",
        "exec-if": "which swaync-client",
        "exec": "swaync-client -swb",
        "on-click": "swaync-client -t -sw",
        "on-click-right": "swaync-client -d -sw",
        "escape": true
    },
    "custom/spotify": {
        "exec": "/usr/bin/python3 ~/.bin/media.py 2> /dev/null",
        "format": "{} {icon}",
        "format-icons": {
            "spotify": "ÔÜº",
            "chrome": "Ôâ®",
            "firefox": "Ôâ©",
            "default": "üéú"
        },
        "return-type": "json",
        "on-click": "playerctl play-pause",
        "on-scroll-up": "playerctl next",
        "on-scroll-down": "playerctl previous"
    },
    "custom/network": {
        "exec": "waybar-net",
        "format": "{}",
        "return-type": "json",
        "interval": 60,
        "on-click": "waybar-net --ipv4 | wl-copy",
        "on-click-right": "waybar-net --ipv6 | wl-copy",
        "on-click-middle": "waybar-net --text | wl-copy",
    },
    "custom/weather": {
        "exec": "waybar-weather",
        "format": "{}",
        "return-type": "json",
        "interval": 600,
        "on-click": "waybar-weather --text | wl-copy",
    },
    "custom/hyprpip": {
        "exec": "hyprpip -waybar",
        "format": "{}",
        "return-type": "json",
        // "signal": 1,
        "on-click": "systemctl --user stop user-hyprpip; pkill -SIGRTMIN+2 hyprpip",
        "on-click-right": "systemctl --user start user-hyprpip; pkill -SIGRTMIN+3 hyprpip",
    },
    "keyboard-state": {
